<?xml version="1.0" encoding="utf-8"?>
<project>

  <meta title="hxScout" package="com.jcward.hxscout.gui" version="1.0.0" company="Jeff Ward" />
  <app main="Main" file="hxScoutMain" />
  <app path="export/legacy/debug" if="legacy debug" />
  <app path="export/legacy/release" if="legacy release" />
  <app path="export/next/debug" if="debug" unless="legacy" />
  <app path="export/next/release" if="release" unless="legacy" />
  <window width="1280" height="1024" background="#333333" resizable="true" fps="30" hardware="true" vsync="true"  />

  <source path="src" />
  <source path="lib" />

  <!-- for CPP server-in-client -->
  <source path="../server" />
  <source path="../../lib" />

  <haxelib name="openfl" />
  <haxelib name="actuate" />

  <!-- for debug telemetry -->
  <haxelib name="hxtelemetry" />
  <haxedef name="HXCPP_STACK_TRACE" />
  <haxedef name="HXCPP_TELEMETRY" />

  <assets path="assets" rename="assets" exclude="*.svg" />
  <icon path="assets/hxScout.svg" />

</project>
